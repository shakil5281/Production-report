# ===========================================
# PRODUCTION REPORT SYSTEM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update the values for your environment

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# SQLite Database (development)
DATABASE_URL="file:./dev.db"

# PostgreSQL Database (production)
# DATABASE_URL="postgresql://username:password@localhost:5432/production_db"

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT Secret for secure authentication - CHANGE IN PRODUCTION
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# JWT Token Expiration
JWT_EXPIRES_IN="7d"

# NextAuth Secret for session management - CHANGE IN PRODUCTION
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# APPLICATION ENVIRONMENT
# ===========================================
NODE_ENV="development"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Gmail configuration for Daily Production Reports
EMAIL_FROM_NAME="Production Management System"
EMAIL_FROM_ADDRESS="your-email@gmail.com"
EMAIL_TO_ADDRESS="recipient@gmail.com"

# Gmail App Password (get from Google Account Settings > Security > App passwords)
EMAIL_APP_PASSWORD="your-gmail-app-password-here"

# Target Report Email Configuration
TARGET_REPORT_EMAIL_TO="target-reports@company.com"
TARGET_REPORT_EMAIL_SUBJECT="Comprehensive Target Report"

# SMTP Configuration (alternative to Gmail)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# ===========================================
# PRODUCTION REPORT SETTINGS
# ===========================================
# Default pagination
DEFAULT_PAGE_SIZE="10"

# Report generation settings
REPORT_TIMEZONE="Asia/Dhaka"
CURRENCY_PRIMARY="USD"
CURRENCY_SECONDARY="BDT"

# Export settings
EXPORT_MAX_RECORDS="10000"
ENABLE_PDF_EXPORT="true"
ENABLE_EXCEL_EXPORT="true"
ENABLE_EMAIL_REPORTS="true"

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable specific features
ENABLE_DAILY_REPORTS="true"
ENABLE_TARGET_MANAGEMENT="true"
ENABLE_LINE_ASSIGNMENTS="true"
ENABLE_USER_PERMISSIONS="true"
ENABLE_ADMIN_FEATURES="true"

# ===========================================
# PERFORMANCE & MONITORING
# ===========================================
# Database connection settings
DB_CONNECTION_POOL_SIZE="5"
DB_TIMEOUT="30000"

# API rate limiting
API_RATE_LIMIT="1000"
API_RATE_WINDOW="3600"

# ===========================================
# COMPANY INFORMATION
# ===========================================
# Company details for reports
COMPANY_NAME="Production Management System"
COMPANY_CONTACT="Your Name"
COMPANY_EMAIL="your-company@email.com"
REPORT_FOOTER="Generated by Production Management System"

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Session settings
SESSION_TIMEOUT="3600000"  # 1 hour in milliseconds
MAX_LOGIN_ATTEMPTS="5"
LOCKOUT_DURATION="900000"  # 15 minutes

# CORS settings
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS="true"

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Debug settings (development only)
DEBUG_SQL="false"
DEBUG_EMAIL="true"
VERBOSE_LOGGING="true"

# Development ports
DEV_PORT="3000"
DEV_HTTPS="false"

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
MAX_FILE_SIZE="10485760"  # 10MB
ALLOWED_FILE_TYPES="pdf,xlsx,csv,png,jpg"

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
# Backup settings
ENABLE_AUTO_BACKUP="true"
BACKUP_RETENTION_DAYS="30"

# Maintenance mode
MAINTENANCE_MODE="false"

# ===========================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# ===========================================
# Third-party API configurations
# EXTERNAL_API_BASE_URL=""
# EXTERNAL_API_KEY=""
# WEBHOOK_SECRET=""

# Cloud storage (if needed)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION=""
# AWS_S3_BUCKET=""

# ===========================================
# NOTES FOR SETUP
# ===========================================
# 1. Copy this file to .env
# 2. Update all "your-*" values with actual credentials
# 3. For Gmail email: Get app password from Google Account Settings
# 4. For production: Change all secrets and URLs
# 5. Restart server after making changes